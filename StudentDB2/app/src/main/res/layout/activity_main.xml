<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.jay.studentdb.MainMenu"
    android:orientation="vertical"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="0.19" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:text="Enter student record"
        android:id="@+id/bEnter"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="100dp"
        android:background="#757575"
        android:textSize="16sp" />




    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:text="Show all records"
        android:id="@+id/bShow"
        android:layout_marginTop="20dp"
        android:background="#757575"
        android:textSize="16sp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:text="Delete Records"
        android:id="@+id/bDelete"
        android:layout_marginTop="20dp"
        android:background="#757575"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="141dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#9e9e9e"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:text="                 -by JayDesai"
        android:id="@+id/etRollnumber"
        android:layout_gravity="right" />


</LinearLayout>




